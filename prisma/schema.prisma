generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Userテーブル（ユーザー情報を保存する場所）の設計
model User {
  id      Int    @id @default(autoincrement()) // ユーザーごとの番号（自動で増える）
  name    String // ユーザー名（必須）
  email   String @unique // メールアドレス（必須・一意）
  iconFileName String // アイコン画像のファイル名（必須）
  password String // パスワード（必須）
  resetToken   String?   // パスワードリセット用トークン
  resetTokenExpires DateTime? // トークン有効期限
  enters  Enter[] // ユーザーの入退室履歴（リレーション）
}

// 入退室履歴テーブル（ユーザーの入退室を記録）
model Enter {
  id        Int      @id @default(autoincrement()) // 履歴ごとの番号
  user      User     @relation(fields: [userId], references: [id]) // Userとのリレーション
  userId    Int      // UserのID
  enteredAt DateTime // 入室時刻
  exitAt    DateTime? // 退室時刻（nullならまだ退室していない）
}
